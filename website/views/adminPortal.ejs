<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Admin</title>
</head>

<body>
    <div class="container align-items-left">
        <div class="col-lg-8 height d-flex justify-content-center align-items-center">
            <div class="col-lg-8">
                <div class="search">
                    <i class="fa fa-search"></i>
                    <input type="text" class="form-control" placeholder="Search">
                    <button class="btn btn-primary">Search</button>
                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                        Search by
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Car details</a></li>
                        <li><a class="dropdown-item" href="#">Customer details</a></li>
                    </ul>
                </div>
            </div>
        </div>


    </div>
    <div class="container-fluid row">
        <div class="col-md-3">
            <h1>Customer info</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>username</th>
                    </tr>
                </thead>
                <tbody>
                    <% customers.forEach(customer => { %>
                        <% console.log('customer:', customer.firstName); %>
                        <tr>
                        <td><%= customer.firstName%></td>
                        <td><%= customer.lastName %></td>
                        <td><%= customer.customerId %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <div class="col-md-5">
            <h1>Car info</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>Plate id</th>
                        <th>year</th>
                        <th>status</th>
                        <th>make</th>
                        <th>price/day</th>
                        <th>top speed</th>
                        <th>color</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <% cars.forEach(car => { %>
                            <td><%= car.plateId %></td>
                            <td><%= car.year %></td>
                            <td><%= car.status %></td>
                            <td><%= car.make %></td>
                            <td><%= car.pricePerDay %></td>
                            <td><%= car.topSpeed_KMperH %></td>
                            <td><%= car.color %></td>                            
                        <% }) %>    
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <h1>Reservations</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>Res ID</th>
                        <th>Start </th>
                        <th>End </th>
                        <th>Price</th>
                        <th>Customer ID</th>
                        <th>Car plate</th>
                        
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <% reservations.forEach(reservation => { %>
                            <% found = undefined; cars.forEach(car => {
                                if (car.plateId === reservation.reservedPlateId)
                                    found = car
                            }); %>
                            <td><%= reservation.reservationId %></td>
                            <td><%= reservation.startDate %></td>
                            <td><%= reservation.endDate %></td>
                            <td>placeholder</td> <!-- will be a view, a virtual column -->
                            <td><%= reservation.customerId %></td>
                            <td><%= found.plateId %></td>                            
                        <% }) %>  
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>


</html>